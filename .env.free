# =============================================================================
# DevSync - Environment Configuration (FREE TIER SETUP)
# =============================================================================
# Copy this file to .env and customize as needed
# Default settings work out of the box with SQLite (no external services)
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------
DJANGO_SECRET_KEY=your-super-secret-key-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,.onrender.com,.vercel.app,.railway.app

# -----------------------------------------------------------------------------
# CORS Settings (Frontend URLs)
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# DEFAULT: SQLite (FREE, no setup required)
# Leave DATABASE_URL empty to use SQLite

# For FREE PostgreSQL (Render, Railway, Supabase, Neon):
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# For local PostgreSQL (optional):
# USE_POSTGRES=True
# POSTGRES_DB=devsync_db
# POSTGRES_USER=devsync_user
# POSTGRES_PASSWORD=devsync_password
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# Redis Configuration (OPTIONAL - not required for free tier)
# -----------------------------------------------------------------------------
# Leave empty to use local memory cache (FREE)
# REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Celery Configuration (OPTIONAL - disabled by default)
# -----------------------------------------------------------------------------
# USE_CELERY=False
