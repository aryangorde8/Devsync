# =============================================================================
# DevSync - Docker Environment Configuration
# =============================================================================
# Use this file when running with Docker Compose
# Copy to .env: cp .env.docker .env
# =============================================================================

# -----------------------------------------------------------------------------
# Django Settings
# -----------------------------------------------------------------------------
DJANGO_DEBUG=True
DJANGO_SECRET_KEY=your-super-secret-key-change-in-production
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,backend

# -----------------------------------------------------------------------------
# PostgreSQL Database (Docker)
# -----------------------------------------------------------------------------
USE_POSTGRES=True
POSTGRES_DB=devsync_db
POSTGRES_USER=devsync_user
POSTGRES_PASSWORD=devsync_password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# Redis Configuration (Docker)
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# -----------------------------------------------------------------------------
# Celery Configuration (Docker)
# -----------------------------------------------------------------------------
USE_CELERY=True
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/1

# -----------------------------------------------------------------------------
# CORS Settings
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
